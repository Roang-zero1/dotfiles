[core]
  pager = delta --dark
[interactive]
  diffFilter = delta --color-only
[add.interactive]
  useBuiltin = false # required for git 2.37.0
[include]
  path=~/.gitconfig.local
[user]
  name = Lucas Brandstaetter
{% if yadm.class == "work" %}
  email = lbr@limessecurity.com
{% else %}
  email = lucas@brandstaetter.tech
{% endif %}

[push]
  default = simple
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  required = true
  process = git-lfs filter-process
[commit]
  verbose = true
[merge]
  stat = true
  conflictstyle = diff3
[diff]
  colorMoved = default
[alias]
  branches = branch -a
  tags = tag
  stashes = stash list

  unstage = reset -q HEAD --
  discard = checkout --
  uncommit = reset --mixed HEAD~
  amend = commit --amend

  graph = log --graph -10 --branches --remotes --tags --format=format:'%Cgreen%h %Cresetâ€¢ %<(75,trunc)%s (%cN, %cr) %Cred%d' --date-order
  precommit = diff --cached --diff-algorithm=minimal -w

  unmerged = diff --name-only --diff-filter=U
  remotes = remote -v

[delta]
    navigate = true
    line-umbers = true
